<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.waubenwissel.Controller">

   <!-- Top bar -->
   <top>
      <HBox alignment="CENTER_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Gegevens wijzigen" />
            <DatePicker fx:id="dateSign" />
            <TextField fx:id="opponentSign" promptText="Tegenstander" />
            <Button fx:id="excelButton" onAction="#openExcelFile" text="Maak excel" />
            <Button fx:id="PngButton" onAction="#makePngFile" text="Maak afbeelding" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>

   <!-- Left player list -->
   <left>
      <ScrollPane fx:id="scrollPane" fitToWidth="true">
         <content>
            <VBox fx:id="playerList" alignment="TOP_CENTER" spacing="10.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </left>

   <!-- Center tabs -->
   <center>
      <TabPane fx:id="quarterTabs" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Kwart 1">
               <content>
                  <HBox fx:id="anchorPane" />
               </content>
            </Tab>
            <Tab text="Kwart 2">
               <content>
                  <HBox />
               </content>
            </Tab>
            <Tab text="Kwart 3">
               <content>
                  <HBox />
               </content>
            </Tab>
            <Tab text="Kwart 4">
               <content>
                  <HBox />
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>

</BorderPane>

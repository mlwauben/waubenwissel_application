<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="startScene" prefHeight="550.0" prefWidth="800.0" stylesheets="@../css/stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NewAccountController">
   <children>
      <TextField fx:id="coachName" layoutX="257.0" layoutY="179.0" />
      <Label layoutX="170.0" layoutY="183.0" text="Coachnaam" />
      <Button fx:id="addAccountButton" layoutX="298.0" layoutY="379.0" mnemonicParsing="false" onAction="#createNewAccount" text="Nieuw account toevoegen" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>
      <Label fx:id="titleNewAccount" layoutX="254.0" layoutY="31.0" text="Nieuw account maken">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Label layoutX="170.0" layoutY="223.0" text="Teamnaam" />
      <TextField fx:id="teamName" layoutX="257.0" layoutY="219.0" />
      <TextField fx:id="newPlayer" layoutX="170.0" layoutY="263.0" />
      <Button fx:id="addPlayer" layoutX="328.0" layoutY="263.0" mnemonicParsing="false" onAction="#addPlayer" text="Speler toevoegen" />
      <Label layoutX="626.0" layoutY="106.0" text="Team" />
      <ScrollPane layoutX="571.0" layoutY="124.0" prefHeight="303.0" prefWidth="164.0">
        <content>
            <VBox fx:id="players" prefHeight="270.0" prefWidth="122.0">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
        </content>
      </ScrollPane>
      <Button fx:id="returnButton" layoutX="43.0" layoutY="34.0" mnemonicParsing="false" onAction="#returnToStart" text="Terug" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Calibri" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
